@model List<MandMWorldBank.Models.Transaction>

@{
    ViewData["Title"] = "Transaction History";
}

<h2>Transaction History</h2>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Sender ID</th>
            <th>Recipient ID</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model)
        {
            <tr>
                <td>@transaction.TransactionDate.ToString("g")</td>
                <td>@transaction.SenderId</td>
                <td>@transaction.RecipientId</td>
                <td>@transaction.Amount</td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Users" asp-action="Dashboard" asp-route-id="@ViewBag.UserId" class="btn btn-secondary">Back to Dashboard</a>