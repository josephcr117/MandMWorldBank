@{
    ViewData["Title"] = "Transfer Funds";
}

<h2>Transfer Funds</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

@if (ViewBag.Success != null)
{
    <div class="alert alert-success">@ViewBag.Success</div>
}

<form asp-action="Transfer">
    <div class="form-group">
        <label for="recipientId">Recipient Account ID</label>
        <input type="number" name="recipientId" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="amount">Amount</label>
        <input type="number" name="amount" class="form-control" step="0.01" required />
    </div>
    <div class="form-group">
        <input type="submit" value="Transfer" class="btn btn-primary" />
        <a asp-controller="Users" asp-action="Dashboard" asp-route-id="@ViewBag.SenderId" class="btn btn-secondary">Back to Dashboard</a>
    </div>
</form>