@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to MandMWorldBank</h1>
    <p>Your trusted partner in banking.</p>

    @if (Context.Session.GetInt32("UserId") == null)
    {
        <div class="mt-5">
            <h3>Get Started</h3>
            <div class="d-flex justify-content-center gap-3">
                <a asp-controller="Users" asp-action="Register" class="btn btn-primary btn-lg">Register</a>
                <a asp-controller="Users" asp-action="Login" class="btn btn-success btn-lg">Login</a>
            </div>
        </div>
    }
    else
    {
        <div class="mt-5">
            <h3>Welcome Back!</h3>
            <p>Manage your account and perform transactions.</p>
            <a asp-controller="Users" asp-action="Dashboard" asp-route-id="@Context.Session.GetInt32("UserId")" class="btn btn-info">Back To Dashboard</a>
        </div>
    }
</div>